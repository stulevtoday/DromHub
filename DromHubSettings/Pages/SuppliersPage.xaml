<Page
    x:Class="DromHubSettings.Pages.SuppliersPage"
    x:Name="pageRoot"
    DataContext="{x:Bind ViewModel}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DromHubSettings.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DromHubSettings.Models"
    xmlns:dialogs="using:DromHubSettings.Dialogs"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Заголовок и описание -->
            <RowDefinition Height="Auto"/>
            <!-- Шапка таблицы (одна строка) -->
            <RowDefinition Height="Auto"/>
            <!-- Список поставщиков -->
            <RowDefinition Height="*"/>
            <!-- Кнопки внизу -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Блок с общим заголовком страницы -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Поставщики" 
                       Style="{StaticResource TitleTextBlockStyle}"
                       Margin="36,24,36,0"/>
            <TextBlock Text="Управляйте информацией о поставщиках. Изменяйте название, почту, локальность и индекс."
                       Style="{ThemeResource BodyTextBlockStyle}"
                       Margin="36,8,36,16"/>
        </StackPanel>

        <!-- Шапка столбцов -->
        <Grid Grid.Row="1"
              Margin="48,0,48,8"
              Padding="8"
              ColumnSpacing="24">
            <Grid.ColumnDefinitions>
                <!-- Те же самые столбцы, что в ItemTemplate -->
                <ColumnDefinition Width="1.5*"/>
                <!-- Название -->
                <ColumnDefinition Width="1.5*"/>
                <!-- Почта -->
                <ColumnDefinition Width="*"/>
                <!-- Локальность -->
                <ColumnDefinition Width="0.4*"/>
                <!-- Индекс -->
                <ColumnDefinition Width="0.4*"/>
                <!-- Под кнопку отключения -->
                <ColumnDefinition Width="0.4*"/>
                <!-- Под кнопку удаления -->
            </Grid.ColumnDefinitions>
            
            <!-- Заголовки для каждого столбца -->
            <TextBlock Grid.Column="0"
                       Text="Название"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="1"
                       Text="Почта"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="2"
                       Text="Локальность"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="3"
                       Text="Индекс"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="4"
                       Text="Статус"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="5"
                       Text="Удалить"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <!-- Пустая ячейка для кнопки удаления (Grid.Column="4") -->
        </Grid>

        <!-- Список поставщиков (ListView сам умеет прокручивать) -->
        <ListView Grid.Row="2"
                  x:Name="SuppliersListView"
                  Margin="36,0,36,0"
                  ItemsSource="{x:Bind ViewModel.Suppliers, Mode=OneWay}"
                  SelectionMode="None"
                  HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Supplier">
                    <Border Background="{ThemeResource SystemControlBackgroundAltMediumBrush}"
                            CornerRadius="4"
                            Margin="0,0,0,8">
                        <Grid Padding="8" ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <!-- Та же самая сетка, что в шапке -->
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.4*"/>
                                <!-- Индекс -->
                                <ColumnDefinition Width="0.4*"/>
                                <ColumnDefinition Width="0.4*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Название (убрали Header, используем PlaceholderText) -->
                            <TextBox Grid.Column="0"
                                     Text="{x:Bind Name, Mode=TwoWay}"
                                     PlaceholderText="Введите название"
                                     VerticalAlignment="Center"/>

                            <!-- Почта -->
                            <TextBox Grid.Column="1"
                                     Text="{x:Bind Email, Mode=TwoWay}"
                                     PlaceholderText="Введите почту"
                                     VerticalAlignment="Center"/>

                            <!-- Локальность -->
                            <TextBox Grid.Column="2"
                                     Text="{x:Bind LocalityName, Mode=TwoWay}"
                                     IsReadOnly="True"
                                     PlaceholderText="Введите локальность"
                                     VerticalAlignment="Center"/>


                            <!-- Индекс -->
                            <NumberBox Grid.Column="3"
                                       Value="{x:Bind Index, Mode=TwoWay}"
                                       Minimum="0"
                                       SmallChange="1"
                                       LargeChange="1"
                                       PlaceholderText="Индекс"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Stretch"/>

                            <ToggleSwitch Grid.Column="4"
                                          IsOn="{x:Bind IsActive, Mode=TwoWay}"/>

                            <!-- Кнопка удаления -->
                            <Button Grid.Column="5"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Click="DeleteButton_Click">
                                <SymbolIcon Symbol="Delete"/>
                            </Button>

                            
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Кнопки добавления/сохранения внизу -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,16,16"
                    Spacing="12">
            <Button Content="Добавить поставщика" Click="AddButton_Click"/>
            <Button Content="Сохранить изменения" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Page>

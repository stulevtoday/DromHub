<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DromHubSettings.Pages.ExportLayoutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DromHubSettings.Pages"
    xmlns:vm="using:DromHubSettings.ViewModels"
    xmlns:models="using:DromHubSettings.Models"
    xmlns:dialogs="using:DromHubSettings.Dialogs"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:ExportLayoutViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <!-- (0) Заголовок и описание -->
            <RowDefinition Height="Auto"/>
            <!-- (1) Настройка начальной строки -->
            <RowDefinition Height="Auto"/>
            <!-- (2) Список маппингов -->
            <RowDefinition Height="*"/>
            <!-- (3) Кнопки внизу -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- (0) Заголовок и описание -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Разметка экспорта"
                       Style="{StaticResource TitleTextBlockStyle}"
                       Margin="36,24,36,0"/>
            <TextBlock Text="Отредактируйте соответствие между полями и номерами столбцов файла."
                       Style="{ThemeResource BodyTextBlockStyle}"
                       Margin="36,8,36,16"/>
        </StackPanel>

        <!-- (1) Настройка начальной строки -->
        <StackPanel Grid.Row="1" Margin="36,0,36,8" Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
            <TextBlock Text="Начальная строка:" 
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"/>
            <NumberBox Value="{x:Bind ViewModel.Settings.StartRow, Mode=TwoWay}" 
                       Minimum="1" 
                       SmallChange="1" 
                       LargeChange="1"
                       VerticalAlignment="Center"
                       Width="80"/>
        </StackPanel>

        <!-- (2) Список маппингов -->
        <StackPanel Grid.Row="2" Margin="48,0,48,0">
            <!-- Шапка столбцов -->
            <Grid Padding="8" ColumnSpacing="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.6*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Text="Поле"
                           Style="{StaticResource BodyStrongTextBlockStyle}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1"
                           Text="Заголовок"
                           Style="{StaticResource BodyStrongTextBlockStyle}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2"
                           Text="Номер столбца"
                           Style="{StaticResource BodyStrongTextBlockStyle}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                <TextBlock Grid.Column="3"
                           Text="Удалить"
                           Style="{StaticResource BodyStrongTextBlockStyle}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- ListView для маппингов -->
            <ListView x:Name="MappingsListView"
                      ItemsSource="{x:Bind ViewModel.Mappings, Mode=OneWay}"
                      SelectionMode="None"
                      HorizontalContentAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:ExportLayoutMapping">
                        <Border Background="{ThemeResource SystemControlBackgroundAltMediumBrush}"
                                CornerRadius="4"
                                Margin="0,0,0,8">
                            <Grid Padding="8" ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="0.4*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Поле -->
                                <TextBox Grid.Column="0"
                                         Text="{x:Bind FieldKey, Mode=TwoWay}"
                                         PlaceholderText="Поле"
                                         VerticalAlignment="Center"/>
                                <!-- Заголовок -->
                                <TextBox Grid.Column="1"
                                         Text="{x:Bind HeaderText, Mode=TwoWay}"
                                         PlaceholderText="Заголовок"
                                         VerticalAlignment="Center"/>
                                <!-- Номер столбца -->
                                <NumberBox Grid.Column="2"
                                           Value="{x:Bind ColumnNumber, Mode=TwoWay}"
                                           Minimum="1"
                                           SmallChange="1"
                                           LargeChange="1"
                                           PlaceholderText="Столбец"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Stretch"/>
                                <!-- Кнопка удаления -->
                                <Button Grid.Column="3"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Click="DeleteMappingButton_Click">
                                    <SymbolIcon Symbol="Delete"/>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <!-- (3) Кнопки внизу -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,16,16" Spacing="12">
            <Button Content="Добавить столбец" Click="AddMappingButton_Click"/>
            <Button Content="Сохранить изменения" Click="SaveMappingsButton_Click"/>
        </StackPanel>
    </Grid>
</Page>

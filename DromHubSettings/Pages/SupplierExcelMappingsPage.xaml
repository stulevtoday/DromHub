<Page
    x:Class="DromHubSettings.Pages.SupplierExcelMappingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DromHubSettings.Pages"
    xmlns:models="using:DromHubSettings.Models"
    xmlns:dialogs="using:DromHubSettings.Dialogs"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <!-- (0) Заголовок и описание страницы -->
            <RowDefinition Height="Auto"/>
            <!-- (1) Шапка таблицы -->
            <RowDefinition Height="Auto"/>
            <!-- (2) Список разметок -->
            <RowDefinition Height="*"/>
            <!-- (3) Кнопка сохранения -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- (0) Заголовок и описание -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Разметка Excel файлов поставщиков"
                       Style="{StaticResource TitleTextBlockStyle}"
                       Margin="36,24,36,0"/>
            <TextBlock Text="Укажите номера столбцов для соответствующих полей. Если столбец 'Множество' отсутствует, оставьте поле пустым."
                       Style="{ThemeResource BodyTextBlockStyle}"
                       Margin="36,8,36,16"/>
        </StackPanel>

        <!-- (1) Шапка столбцов -->
        <Grid Grid.Row="1"
              Margin="48,0,48,8"
              Padding="8"
              ColumnSpacing="24">
            <Grid.ColumnDefinitions>
                <!-- Столбцы должны совпадать со структурой в ItemTemplate -->
                <ColumnDefinition Width="2*"/>
                <!-- Поставщик -->
                <ColumnDefinition Width="*"/>
                <!-- Название -->
                <ColumnDefinition Width="*"/>
                <!-- Бренд -->
                <ColumnDefinition Width="*"/>
                <!-- Каталожное наименование -->
                <ColumnDefinition Width="*"/>
                <!-- Количество -->
                <ColumnDefinition Width="*"/>
                <!-- Цена -->
                <ColumnDefinition Width="*"/>
                <!-- Множество -->
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Поставщик"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="1"
                       Text="Название"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="2"
                       Text="Бренд"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="3"
                       Text="Артикул"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="4"
                       Text="Кол-во"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="5"
                       Text="Цена"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="6"
                       Text="Множество"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Grid>

        <!-- (2) Список разметок (ListView) -->
        <ListView Grid.Row="2"
                  x:Name="ExcelMappingListView"
                  Margin="36,0,36,0"
                  ItemsSource="{x:Bind ViewModel.SupplierExcelMappings, Mode=OneWay}"
                  SelectionMode="None"
                  HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:SupplierExcelMapping">
                    <Border Background="{ThemeResource SystemControlBackgroundAltMediumBrush}"
                            CornerRadius="4"
                            Margin="0,0,0,8">
                        <Grid Padding="8" ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <!-- Поставщик -->
                                <ColumnDefinition Width="*"/>
                                <!-- Название -->
                                <ColumnDefinition Width="*"/>
                                <!-- Бренд -->
                                <ColumnDefinition Width="*"/>
                                <!-- Каталожное наим. -->
                                <ColumnDefinition Width="*"/>
                                <!-- Количество -->
                                <ColumnDefinition Width="*"/>
                                <!-- Цена -->
                                <ColumnDefinition Width="*"/>
                                <!-- Множество (опционально) -->
                            </Grid.ColumnDefinitions>

                            <!-- Поставщик (read-only) -->
                            <TextBox Grid.Column="0"
                                     Text="{x:Bind SupplierName, Mode=TwoWay}"
                                     IsReadOnly="True"
                                     PlaceholderText="Поставщик"
                                     VerticalAlignment="Center"/>

                            <!-- Номер столбца для Названия -->
                            <TextBox Grid.Column="1"
                                     Text="{x:Bind ColumnProductName, Mode=TwoWay}"
                                     PlaceholderText="№ столбца"
                                     VerticalAlignment="Center"/>

                            <!-- Номер столбца для Бренда -->
                            <TextBox Grid.Column="2"
                                     Text="{x:Bind ColumnBrand, Mode=TwoWay}"
                                     PlaceholderText="№ столбца"
                                     VerticalAlignment="Center"/>

                            <!-- Номер столбца для Каталожного наименования -->
                            <TextBox Grid.Column="3"
                                     Text="{x:Bind ColumnCatalogName, Mode=TwoWay}"
                                     PlaceholderText="№ столбца"
                                     VerticalAlignment="Center"/>

                            <!-- Номер столбца для Количества -->
                            <TextBox Grid.Column="4"
                                     Text="{x:Bind ColumnQuantity, Mode=TwoWay}"
                                     PlaceholderText="№ столбца"
                                     VerticalAlignment="Center"/>

                            <!-- Номер столбца для Цены -->
                            <TextBox Grid.Column="5"
                                     Text="{x:Bind ColumnPrice, Mode=TwoWay}"
                                     PlaceholderText="№ столбца"
                                     VerticalAlignment="Center"/>

                            <!-- Номер столбца для Множества (опционально) -->
                            <TextBox Grid.Column="6"
                                     Text="{x:Bind ColumnMultiple, Mode=TwoWay}"
                                     PlaceholderText="№ столбца (опц.)"
                                     VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- (3) Кнопка сохранения -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,16,16"
                    Spacing="12">
            <Button Content="Сохранить изменения" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Page>

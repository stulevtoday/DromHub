<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DromHubSettings.Pages.BrandMarkupsPage"
    x:Name="pageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:DromHubSettings.ViewModels"
    xmlns:dialogs="using:DromHubSettings.Dialogs"
    xmlns:models="using:DromHubSettings.Models"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:MarkupPageViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Заголовок и описание -->
            <RowDefinition Height="Auto"/>
            <!-- Список наценок -->
            <RowDefinition Height="*"/>
            <!-- Кнопки внизу -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и описание -->
        <StackPanel Grid.Row="0" Margin="36,24,36,16">
            <TextBlock Text="Наценки по бренду" 
                       Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="Управляйте наценками для брендов. Вы можете добавлять, удалять и сохранять изменения."
                       Style="{ThemeResource BodyTextBlockStyle}"/>
        </StackPanel>

        <!-- Список наценок -->
        <ListView Grid.Row="1"
                  x:Name="BrandMarkupsListView"
                  Margin="36,0,36,0"
                  ItemsSource="{Binding BrandMarkups}"
                  SelectionMode="None"
                  HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:BrandMarkup">
                    <Border Background="{ThemeResource SystemControlBackgroundAltMediumBrush}"
                            CornerRadius="4"
                            Margin="0,0,0,8">
                        <Grid Padding="8" ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <!-- Название бренда -->
                            <TextBox Grid.Column="0"
                                     Text="{x:Bind BrandName, Mode=TwoWay}"
                                     PlaceholderText="Введите название бренда"
                                     VerticalAlignment="Center"/>
                            <!-- Наценка -->
                            <NumberBox Grid.Column="1"
                                       Value="{x:Bind Markup, Mode=TwoWay}"
                                       Minimum="0"
                                       Maximum="1000"
                                       SmallChange="1"
                                       LargeChange="10"
                                       PlaceholderText="Наценка (%)"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Stretch"/>
                            <!-- Кнопка удаления: Команда берётся из ViewModel через ElementName -->
                            <Button Grid.Column="2"
                                    Command="{Binding DataContext.DeleteCommand, ElementName=pageRoot}"
                                    CommandParameter="{x:Bind}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                                <SymbolIcon Symbol="Delete"/>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Кнопки добавления и сохранения -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,16,16" Spacing="12">
            <Button Content="Добавить бренд" Click="AddButton_Click"/>
            <Button Content="Сохранить изменения" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Page>

<Page
    x:Class="DromHubSettings.Pages.LocalitiesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DromHubSettings.Pages"
    xmlns:models="using:DromHubSettings.Models"
    xmlns:dialogs="using:DromHubSettings.Dialogs"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <!-- (0) Заголовок и описание страницы -->
            <RowDefinition Height="Auto"/>
            <!-- (1) Шапка таблицы -->
            <RowDefinition Height="Auto"/>
            <!-- (2) Список локальностей -->
            <RowDefinition Height="*"/>
            <!-- (3) Кнопки внизу страницы -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- (0) Заголовок и описание -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Локальности" 
                       Margin="36,24,36,0"
                       Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="Управляйте списком локальностей и сроками доставки."
                       Margin="36,8,36,16"
                       Style="{ThemeResource BodyTextBlockStyle}"/>
        </StackPanel>

        <!-- (1) Шапка столбцов -->
        <Grid Grid.Row="1" Margin="48,0,48,8" Padding="8" ColumnSpacing="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Название -->
                <ColumnDefinition Width="*"/>
                <!-- Срок доставки -->
                <ColumnDefinition Width="0.4*"/>
                <!-- Удалить -->
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Text="Название"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="1"
                       Text="Срок доставки (дней)"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
            <TextBlock Grid.Column="2"
                       Text="Удалить"
                       Style="{StaticResource BodyStrongTextBlockStyle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Grid>

        <!-- (2) Список локальностей -->
        <ListView Grid.Row="2"
                  x:Name="LocalitiesListView"
                  Margin="36,0,36,0"
                  ItemsSource="{x:Bind ViewModel.Localities, Mode=OneWay}"
                  SelectionMode="None"
                  HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:LocalityOption">
                    <Border Background="{ThemeResource SystemControlBackgroundAltMediumBrush}"
                            CornerRadius="4"
                            Margin="0,0,0,8">
                        <Grid Padding="8" ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0.4*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Название локальности -->
                            <TextBox Grid.Column="0"
                                     Text="{x:Bind Name, Mode=TwoWay}"
                                     PlaceholderText="Введите название"
                                     VerticalAlignment="Center"/>

                            <!-- Срок доставки (в днях) -->
                            <NumberBox Grid.Column="1"
                                       Value="{x:Bind DeliveryTime, Mode=TwoWay}"
                                       Minimum="0"
                                       SmallChange="1"
                                       LargeChange="1"
                                       PlaceholderText="Срок доставки"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Stretch"/>

                            <!-- Кнопка удаления локальности -->
                            <Button Grid.Column="2"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Click="DeleteButton_Click">
                                <SymbolIcon Symbol="Delete"/>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- (3) Кнопки добавления/сохранения -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,16,16" Spacing="12">
            <Button Content="Добавить локальность" Click="AddButton_Click"/>
            <Button Content="Сохранить изменения" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Page>

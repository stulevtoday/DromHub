<ContentDialog
    x:Class="DromHubSettings.Dialogs.AddExportColumnDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Добавить столбец"
    PrimaryButtonText="Добавить"
    CloseButtonText="Отмена"
    DefaultButton="Primary"
    x:Name="RootDialog">

    <StackPanel Spacing="12">
        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Название:"/>
            <TextBox x:Name="ColumnNameTextBox" Width="150"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Номер столбца:"/>
            <TextBox x:Name="ColumnIndexTextBox" Width="50"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Свойство:"/>
            <TextBox x:Name="MappingPropertyTextBox" Width="150"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Включен:"/>
            <CheckBox x:Name="IsVisibleCheckBox" IsChecked="True"/>
        </StackPanel>
    </StackPanel>
</ContentDialog>
